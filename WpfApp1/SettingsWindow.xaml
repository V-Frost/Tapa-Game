<Window x:Class="WpfApp1.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="301" Width="263">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Margin="10,10,10,10" Grid.ColumnSpan="2">
            <!-- Чекбокс для закріплення вікна на передньому плані -->
            <CheckBox x:Name="FixSettingCheckBox" Content="Закріпити налаштування" Margin="0,0,0,10" />
            <CheckBox x:Name="SettingCheckBox1" Content="Показати поточний рядок та стовпець" Margin="0,0,0,10" />
            <CheckBox x:Name="NightModeCheckBox" Content="Нічний режим" Margin="0,0,0,10" />
            <CheckBox x:Name="HighlightErrorsCheckBox" Content="Відображати помилки голубим" Margin="0,0,0,10" />
            <CheckBox x:Name="LastChangeCheckBox" Content="Виділити останню зміну" Margin="0,0,0,10" />

        </StackPanel>
    </Grid>
</Window>
